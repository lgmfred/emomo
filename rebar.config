{erl_opts,
 [warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  debug_info]}.

{minimum_otp_vsn, "23"}.

{deps, [{hackney, "1.18.1"}, {jsx, "2.10.0"}, {uuid, "2.0.4", {pkg, uuid_erl}}]}.

{profiles, [{test, [{plugins, [{rebar3_lint, "3.0.0"}]}, {deps, [{meck, "0.9.2"}]}]}]}.

{cover_enabled, true}.

{cover_opts, [verbose, {min_coverage, 80}]}.

{alias, [{test, [{format, "--verify"}, lint, hank, xref, dialyzer, ct, cover, edoc]}]}.

{project_plugins, [rebar3_format, rebar3_lint, rebar3_hank, rebar3_hex]}.

{xref_checks,
 [undefined_function_calls,
  deprecated_functions,
  locals_not_used,
  unused_exports,
  deprecated_function_calls]}.

{dialyzer,
 [{warnings, [no_return, unmatched_returns, error_handling, unknown]},
  {plt_apps, top_level_deps},
  {plt_extra_apps, []},
  {plt_location, local},
  {base_plt_apps, [erts, stdlib, kernel]},
  {base_plt_location, global}]}.
